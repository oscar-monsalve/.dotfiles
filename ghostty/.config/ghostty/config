# --- Dynamic theme colors for Omarchy ---
config-file = ?"~/.config/omarchy/current/theme/ghostty.conf"
# theme = rose-pine
# theme = rose-pine-moon
# theme = tokyonight

# --- Font ---
font-size = 15
font-feature = -calt

# --- Window ---
window-padding-color = background
background = 000000
background-opacity = 0.85
background-blur = false
confirm-close-surface = false
resize-overlay = never

# --- Features ---
# uncomment "shell-integration" to get the block cursor at ghostty startup
shell-integration = none
shell-integration-features = no-cursor, no-sudo, no-title
mouse-hide-while-typing = true
copy-on-select = false

# --- Cursor stlying ---
cursor-style = block
cursor-style-blink = false

# Disable Ctrl+Enter fullscreen keybind
keybind = ctrl+enter=unbind

# --- Keybinds ---
keybind = shift+ctrl+r=reload_config
keybind = ctrl+,=unbind
